<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Kalkulator">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:textColor="@color/blue"
        android:text="KALKULATOR"
        android:textSize="30dp"
        android:textAlignment="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="ANGKA 1 : "
        android:textSize="30dp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/angka1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:gravity="start|top"
        android:ems="10"
        android:inputType="textMultiLine" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="ANGKA 2 : "
            android:textSize="30dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/angka2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="start|top"
            android:ems="10"
            android:inputType="textMultiLine" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/tbl_hitung"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/blues"
            android:onClick="tambah"
            android:text="+"
            android:textAlignment="center"

            android:textSize="20dp" />

        <Button
            android:id="@+id/tbl_kurang"
            android:layout_width="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/blues"
            android:onClick="kurang"
            android:text="-"
            android:textAlignment="center"

            android:textSize="20dp" />

        <Button
            android:id="@+id/tbl_kali"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"

            android:layout_gravity="center"
            android:background="@color/blues"
            android:onClick="kali"
            android:text="x"
            android:textAlignment="center"

            android:textSize="20dp" />

        <Button
            android:id="@+id/tbl_bagi"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/blues"
            android:onClick="bagi"
            android:text="/"
            android:textAlignment="center"

            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp">
       <Button
           android:id="@+id/clear"
           android:layout_width="300dp"
           android:layout_height="match_parent"
           android:layout_gravity="center"
           android:background="@color/blues"
           android:onClick="clear"
           android:text="Clear"
           android:textAlignment="center"

           android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <TextView
            android:id="@+id/hasil"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:text=" HASILNYA : "
            android:textSize="25dp"/>


    </LinearLayout>
</LinearLayout>